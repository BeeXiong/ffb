</div>

<div class="pt-3">
    <table id="statTable" class="table table-responsive-md table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th align="center" id="playerName">Player Name</th>
                <th align="center" id="statTableYards">Yardage</th>
                <th align="center" id="typeOfPlay">Att/Rush/Tar</th>
                <th align="center" id="resultOfPlay">Comp/Rec</th>
                <th align="center" id="typeOfTD">Type of Score</th>
                <th align="center" id="typeofTO">Fum/Int</th>
                <th align="center" id="sack">Sack</th>
                <th align="center" id="defTakeaway">Fum Rec/Int</th>
                <th align="center" id="FG">FG</th>
                <th align="center" id="pointsAllowed">Pts Allowed</th>
                <th align="center" id="Bonus">Bonus</th>
                <th align="center">Edit Stat</th>
                <th align="center">Delete Stat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stat in Model.gamestats)
            {
                <tr>
                    <td align="center">@stat.player.firstName @stat.player.lastName</td>
                    <td align="center">
                        @if (@stat.passYards != null)
                        { <p>@stat.passYards</p>}
                        else if (@stat.rushYards != null)
                        {<p> @stat.rushYards </p> }
                        else if (@stat.recYards != null)
                        {<p> @stat.recYards </p>}
                        else
                        { <p></p> }
                    </td>
                    <td align="center">
                        @if (@stat.rushAttempt == true)
                        { <p>Rush</p> }
                        else if (@stat.passAttempt == true)
                        { <p>Pass Att</p> }
                        else if (@stat.target == true)
                        { <p>Target</p> }
                    </td>
                    <td align="center">
                        @if (@stat.passCompletion == true)
                        { <p>Comp</p> }
                        else if (@stat.reception == true)
                        { <p>Rec</p> }
                    </td>
                    <td align="center">
                        @if (@stat.isAPassTouchdown == true)
                        { <p>Pass TD</p>}
                        else if (@stat.isARushTouchdown == true)
                        {<p>Rush TD</p> }
                        else if (@stat.isARecTouchdown == true)
                        {<p> Rec TD </p>}
                        else if (@stat.isADefensiveTD == true)
                        {<p> Def TD </p>}
                        else if (@stat.isA2Point == true)
                        {<p> 2pt </p>}
                    </td>
                    <td align="center">
                        @if (@stat.isAFumble == true)
                        { <p>Fumble</p> }
                        else if (@stat.isAinterception == true)
                        { <p>Int</p> }
                    </td>
                    <td align="center">
                        @if (@stat.isASack == true)
                        { <p>Sack</p> }
                    </td>
                    <td align="center">
                        @if (@stat.isAFumbleRecovery == true)
                        { <p>Fum Rec</p> }
                        else if (@stat.isAinterception == true)
                        { <p>Int</p> }
                    </td>
                    <td align="center">
                        @if (@stat.PAT == true)
                        { <p>PAT</p> }
                        else if (@stat.isAFG39 == true)
                        { <p>FG 17-39</p> }
                        else if (@stat.isAFG49 == true)
                        { <p>FG 40-49</p> }
                        else if (@stat.isAFG59 == true)
                        { <p>FG 50-59</p> }
                        else if (@stat.isAFG60 == true)
                        { <p>FG 60+</p> }
                    </td>
                    <td align="center">
                        @if (@stat.points0 == true)
                        { <p>Points Allowed - 0</p> }
                        else if (@stat.points7 == true)
                        { <p>Pts Allowed 1-7</p> }
                        else if (@stat.points20 == true)
                        { <p>Pts Allowed 8-20</p> }
                        else if (@stat.points27 == true)
                        { <p>Pts Allowed 21-27</p> }
                        else if (@stat.points34 == true)
                        { <p>Pts Allowed 28-34</p> }
                        else if (@stat.points35 == true)
                        { <p>Pts Allowed 35+</p> }
                    </td>
                    <td align="center">
                        @if (@stat.isAtdbetween35_49 == true)
                        { <p>TD 35-49</p> }
                        else if (@stat.isAtdOver50 == true)
                        { <p>TD 50+</p> }
                    </td>

                    <td>@Html.ActionLink("Edit Stats", "editStat", new { statId = stat.Id }, new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("Delete Stats", "deleteStat", new { statId = stat.Id }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script src="~/Scripts/stats.js"></script>