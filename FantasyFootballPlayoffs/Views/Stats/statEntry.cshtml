@model FantasyFootballPlayoffs.ViewModels.StatEntryViewModel

@{
    ViewBag.Title = "statEntry";
}


<div class="card w-100 roundedCorners px-3" id="Validation">
    <div class="row">
        <div class="card-header-green w-100"><h2>Create A Stat</h2></div>
        <div class="card-body">
            <h3>Enter Stat</h3>
            <div class="row">
                <div class="col-12">
                    <div class="col-lg-3">
                        @Html.LabelFor(m => m.gameStat.player, htmlAttributes: new { @class = "text-blueSummer" })
                        @if (Model.gameStat != null)
                        {
                            @Html.DropDownListFor(m => m.gameStat.playerId, new SelectList(Model.gamePlayers, "playerId", "fullName", Model.gameStat.playerId), "Select Player", new { @class = "form-control", id = "gamePlayer" })
                            @Html.HiddenFor(m => m.Id, new { @id = "id", Value = Model.gameStat.Id })
                            @Html.HiddenFor(m => m.gameId, new { @id = "gameId" })
                        }
                        else
                        {
                            @Html.DropDownListFor(m => m.gameStat.playerId, new SelectList(Model.gamePlayers, "playerId", "fullName"), "Select Player", new { @class = "form-control", id = "gamePlayer" })
                            @Html.HiddenFor(m => m.Id, new { @id = "id", Value = -1 })
                            @Html.HiddenFor(m => m.gameId, new { @id = "gameId" })
                        }

                    </div>

                </div>

                <div class="col-lg-12">
                    <div class="col-lg-2 dropdown-inline py-2 align-top" id="PassStats">
                        <div>
                            @if (Model.gameStat != null)
                            {
                                @Html.CheckBoxFor(m => m.gameStat.isAPassTouchdown, new { @type = "checkbox", id = "PassTD", @checked = true }) <label class="checkbox-inline text-blueSummer" for="PassTD" style="padding-right:20px">Pass TD</label>
                            }
                            else
                            {
                                @Html.CheckBoxFor(m => m.gameStat.isAPassTouchdown, new { @type = "checkbox", id = "PassTD" }) <label class="checkbox-inline text-blueSummer" for="PassTD" style="padding-right:20px">Pass TD</label>
                            }
                        </div>
                        <div>
                            @Html.CheckBoxFor(m => m.gameStat.passAttempt, new { @type = "checkbox", id = "PassAtt" }) <label class="checkbox-inline text-blueSummer" for="PassAtt" style="padding-right:20px">Pass Att</label>
                        </div>
