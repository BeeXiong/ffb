                                    <td align="center">@playerStatRecord.FG59</td>
                                    <td align="center">@playerStatRecord.FG60</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>   
        <div class="col-lg-5 my-2 mx-4 bg-white roundedCorners" id="awayTeamKicking">
            <h5 class="my-2">@Model.game.awayTeam.location.teamLocation @Model.game.awayTeam.awayTeamName Kicking</h5>
            <table id="awayTeamDefTable" class="table table-responsive-md table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th align="center">Player Name</th>
                        <th align="center">PAT</th>
                        <th align="center">FG17-39</th>
                        <th align="center">FG40-49</th>
                        <th align="center">FG50-59</th>
                        <th align="center">FG60+</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var playerStatRecord in Model.boxScoreStats)
                    {
                        if (playerStatRecord.playerPositionId == 19 && playerStatRecord.teamId == Model.game.awayTeamId)
                        {
                            <tr>
                                <td align="center">@playerStatRecord.firstName @playerStatRecord.lastName</td>
                                <td align="center">@playerStatRecord.PAT</td>
                                <td align="center">@playerStatRecord.FG39</td>
                                <td align="center">@playerStatRecord.FG49</td>
                                <td align="center">@playerStatRecord.FG59</td>
                                <td align="center">@playerStatRecord.FG60</td>
