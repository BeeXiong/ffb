<div class="pt-3 my-2">
    <h3>Box Score</h3>
    <div class="col-12">
        <div class="row roundedCorners" id="passing">
            <div class="col-lg-5 my-2 mx-4 bg-white roundedCorners" id="homeTeamPassing">
                <h5 class="my-2">@Model.game.homeTeam.location.teamLocation @Model.game.homeTeam.homeTeamName Passing</h5>
                <table id="homeTeamPassingTable" class="table table-responsive-md table-condensed table-hover table-striped">
                    <thead>
                        <tr>
                            <th align="center">Player Name</th>
                            <th align="center">Comp</th>
                            <th align="center">Att</th>
                            <th align="center">Yards</th>
                            <th align="center">TD</th>
                            <th align="center">Int</th>
                        </tr>
